<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_cart_list_view"
        android:layout_width="88dp"
        android:layout_height="88dp"
        tools:src="@drawable/main_logo"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="88dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/cart_list_english_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="English name"
            android:textColor="@color/dark_orange"
            android:layout_gravity="center"
            android:gravity="left|center"
            />


        <TextView
            android:id="@+id/cart_list_hindi_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Hindi name"
            android:textColor="@color/dark_orange"
            android:layout_gravity="center"
            android:gravity="left|center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >


            <TextView
                tools:text="â‚¹ 100"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:id="@+id/cart_list_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/fresh_leafy_green"
                android:paddingRight="5dp"
                />

            <TextView
                tools:text="Per Kg"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:id="@+id/cart_list_unit_measure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/fresh_leafy_green"
                android:layout_weight="1"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total Quantity - "
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/cart_total_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Item Total - "
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cart_list_total_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"

                tools:text="300 x 8 = 2400"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>


